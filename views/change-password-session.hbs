{{#if msg}}
  <div class="row">
    <div class="alert {{alertClass}} alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      {{msg}}
    </div>
  </div>
{{/if}}

<div class="row margin-b-10">
  <div class="col-xs-12 panelPadraoDefault">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title text-center font-bold">{{{i18n 'changePass'}}}</h3>
      </div>
      <div class="panel-body">
        <form id="changePasswordForm" class="form-horizontal" role="form" method="post">
          <div class="row">
            <div class="col-xs-12">
              <input type="text" class="form-control" id="enrollment" name="enrollment" value="{{sess.enrollment}}" required readonly>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12">
              <input type="password" class="form-control  margin-t-15" id="currentPassword" name="currentPassword" placeholder="{{{i18n 'currentPass'}}}" required>
            </div>
          </div>
          <div class="row margin-t-15">
            <div class="col-xs-12">
              <input type="password" class="form-control" id="newPassword" name="newPassword" placeholder="{{{i18n 'newPass'}}}" required>
            </div>
          </div>
          <div class="row margin-t-15">
            <div class="col-xs-12">
              <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="{{{i18n 'confirmPass'}}}" required>
            </div>
          </div>
          <div class="row margin-t-15 text-right">
            <div class="col-xs-12">
              <input class="btn btn-success font-bold" type="submit" value="{{{i18n 'changePass'}}}">
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
