{{#if flashMsg}}
  <div class="row">
    <div class="col-xs-12">
      <div class="alert {{flashMsg.styleMsg}} alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <strong>{{i18n 'attendance'}}</strong> {{flashMsg.txtMsg}}
      </div>
    </div>
  </div>
{{/if}}

<div class="panel panel-primary">
  <div class="panel-heading">{{i18n 'list'}} {{i18n 'attendance'}}</div>
  <div class="panel-body">
    <div class="row" style="margin-bottom:10px;">
      <div class="col-sm-1">
        <button style="margin:0px;" type="button" name="button" class="btn btn-danger" data-toggle="modal" data-target="#myModal">{{i18n 'filter'}}</button>
      </div>
      <div class="col-sm-10"></div>
      <div class="col-sm-1 text-right">
        <a href="/attendance/new">
          <button style="margin:0px;" type="button" name="button" class="btn btn-primary">{{i18n 'new'}}</button>
        </a>
      </div>
    </div>
    <table class="table table-hover table-striped styleTableICT">
      <thead>
        <tr>
          <th>NÂº</th>
          <th>{{i18n 'schedule'}}</th>
          <th>{{i18n 'type'}}</th>
          <th>{{i18n 'patient'}}</th>
          <th>{{i18n 'nurse'}}</th>
          <th>{{i18n 'reason'}}</th>
          <th>{{i18n 'procedure'}}</th>
          <th>{{i18n 'detailing'}}</th>
        </tr>
      </thead>
      <tbody>
        {{#each attendances}}
          <tr data-sick-bay-attendance-id="{{SickBayAttendanceID}}">
            <td class="text-center">{{SickBayAttendanceID}}</td>
            <td class="text-center">{{Schedule}}</td>
            <td>{{i18n SickBayAttendanceType.Name}}</td>
            <td>{{PatientName}}</td>
            <td class="text-center">{{Nurse_Matricula}}</td>
            <td>{{Reason}}</td>
            <td>{{Procedure}}</td>
            <td class="text-center">
              <i class="fa fa-plus" aria-hidden="true" onclick="moreInfo(this);"></i>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">{{i18n 'filter'}} {{i18n 'attendance'}}</h4>
      </div>
      <div class="modal-body">
        <form action="/attendance/find" method="post">
          <div class="row">
            <div class="col-sm-3">
              <label for="">{{i18n 'enrollment'}}</label>
              <input type="number" name="matricula" class="form-control">
            </div>
            <div class="col-sm-9">
              <label for="">{{i18n 'name'}}</label>
              <input type="text" name="name" class="form-control">
            </div>
          </div>
          <div class="row" style="margin-top:5px;">
            <div class="col-sm-4">
              <label for="">{{i18n 'schedule'}}</label>
              <input type="datetime-local" name="schedule" class="form-control">
            </div>
            <div class="col-sm-8">
              <label for="">{{i18n 'type'}}</label>
              <input type="text" name="type" class="form-control">
            </div>
          </div>
          <div class="row text-right" style="margin-top:10px;">
            <div class="col-sm-12">
              <input type="submit" value="{{i18n 'search'}}" class="btn btn-success btn-xs">
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


{{#section 'script'}}
  <script type="text/javascript">

    function moreInfo(el){
      let form = document.createElement("form")
      form.method = "POST"
      form.action = "/attendance/more-info"
      var campo1 = document.createElement("input")
      campo1.name= 'SickBayAttendanceID'
      campo1.value= $(el).closest('tr').data('sick-bay-attendance-id')
      form.appendChild(campo1)
      document.body.appendChild(form)
      form.submit()
    }

  </script>
{{/section}}
